@page
@model Portfolio.Pages.CMS.Certificates.CertificateListModel
@{
    ViewData["Title"] = "CertificateList";
}

@if (Model.Message != null)
{
    <div class="alert alert-success" id="alert">@Model.Message</div>
}

<h1>Certificate List</h1>

@foreach(var group in Model.Certificates.GroupBy(lang => lang.Skill.SkillName))
{
    <table class="table">
        @group.Key
        @foreach (var certificate in group)
        {
        <tr>
            <td style="width:80%;">@certificate.CertificateName</td>
            <td class="align-middle"><a asp-page="./EditCertificate" asp-route-certificateId="@certificate.Id"><i class="far fa-edit fa-sm"></i></a></td>
        </tr>
        }
        
    </table>
}

<a class="btn btn-primary" asp-page="./EditCertificate">Add</a>

