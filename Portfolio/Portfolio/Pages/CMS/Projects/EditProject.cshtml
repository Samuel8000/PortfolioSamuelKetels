@page "{projectId:int?}"
@model Portfolio.Pages.CMS.Projects.EditProjectModel
@{
    ViewData["Title"] = "Edit Project";
}

    <div class="container">
        <div class="title-container mt-3">
            <h1 class="text-center title pt-0">@Model.Heading Project</h1>
        </div>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="PersonalProject.Id"/>
            <input type="hidden" asp-for="PPTag.PersonalProjectId"/>
            <input type="hidden" asp-for="PPTag.Id"/>
            <input type="hidden" asp-for="PersonalProject.ProjectThumb" />

            <div class="form-group">
                <label asp-for="PersonalProject.ProjectName"></label>
                <input class="form-control" asp-for="PersonalProject.ProjectName" />
            </div>
            <div class="form-group">
                <label asp-for="PersonalProject.ProjectDescription"></label>
                <textarea class="form-control" asp-for="PersonalProject.ProjectDescription"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ProjectThumb"></label>
                <div class="custom-file">
                    <input asp-for="ProjectThumb" class="custom-file-input" />
                    <label class="custom-file-label">Upload Project Thumbnail</label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PersonalProject.DateCompleted"></label>
                <input id="date" class="form-control" asp-for="PersonalProject.DateCompleted" type="date" asp-format="{0:dd-MM-yyyy}" />
            </div>

            <div class="form-group">
                <label asp-for="PersonalProject.CodeLink"></label>
                <input asp-for="PersonalProject.CodeLink" class="form-control"/>
            </div> 
            
            <div class="row d-flex justify-content-between">
                <div class="form-group col-2">
                    <label asp-for="PPTag.Tag1"></label>
                    <select asp-for="PPTag.Tag1" asp-items="Model.ProjectTags" class="form-control"></select>
                </div>
                <div class="form-group col-2">
                    <label asp-for="PPTag.Tag2"></label>
                    <select asp-for="PPTag.Tag2" asp-items="Model.ProjectTags" class="form-control"></select>
                </div>
                <div class="form-group col-2">
                    <label asp-for="PPTag.Tag3"></label>
                    <select asp-for="PPTag.Tag3" asp-items="Model.ProjectTags" class="form-control"></select>
                </div>
                <div class="form-group col-2">
                    <label asp-for="PPTag.Tag4"></label>
                    <select asp-for="PPTag.Tag4" asp-items="Model.ProjectTags" class="form-control"></select>
                </div>
                <div class="form-group col-2">
                    <label asp-for="PPTag.Tag5"></label>
                    <select asp-for="PPTag.Tag5" asp-items="Model.ProjectTags" class="form-control"></select>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
            @section Scripts{
                <script src="~/js/form.js" type="text/javascript"></script>
            }
        </form>
    </div>
