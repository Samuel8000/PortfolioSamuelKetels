@page
@model Portfolio.Pages.CMS.Projects.ProjectsListModel
@{
    ViewData["Title"] = "CMS - Projects List";
}
    <div class="container">
        <div class="title-container mt-3">
            <h1 class="title text-center pt-0">Projects</h1>
        </div>
        <div class="d-flex justify-content-between">
            <h2 class="subtitleh2 pt-0">Personal Projects</h2>
            <a class="w10 text-center mt-3 icon-color" asp-page="./EditProject"><i class="far fa-plus-square fa-2x"></i></a>
        </div>
        <table class="table">

                <tr class="bg-th">
                    <th>Project Name</th>
                    <th class="text-center">Completion Date</th>
                    <th class="text-center">Edit</th>
                </tr>

            @foreach (var project in Model.PersonalProjects)
            {
                <tr>
                    <td class="w70">@project.ProjectName</td>
                    
                    <td class="w20 text-center">
                         @project.DateCompleted.ToShortDateString()
                        
                    </td>
                    <td class="w10 text-center"><a class="icon-color" asp-page="./EditProject" asp-route-projectId="@project.Id"><i class="far fa-edit fa-sm"></i></a></td>
                </tr>
            }

        </table>

        <hr />
        <div class="d-flex justify-content-between">
            <h2 class="subtitleh2 pt-0">FreeCodeCamp Projects</h2>
            <a class="w10 text-center mt-3 icon-color" asp-page="./EditFccProject"><i class="far fa-plus-square fa-2x"></i></a>
        </div>
        <h3 class="subtitleh3">Responsive Web Design</h3>
        <table class="table">
            <tr class="bg-th">
                <th>Project Name</th>
                <th class="text-center">Edit</th>
            </tr>
            @foreach (var fccProject in Model.FccRWDProjects)
            {
                <tr>
                    <td class="w90">@fccProject.FccProjectName</td>
                    <td class="w10 text-center"><a class="icon-color" asp-page="./EditFccProject" asp-route-fccProjectId="@fccProject.Id"><i class="far fa-edit fa-sm"></i></a></td>
                </tr>
            }

        </table>
        <h3 class="subtitleh3">JavaScript</h3>

    </div>

