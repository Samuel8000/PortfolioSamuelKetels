@page "{fccProjectId:int?}"
@model Portfolio.Pages.CMS.Projects.EditFccProjectModel
@{
    ViewData["Title"] = "EditFccProject";
}

    <div class="container">
        <div class="title-container mt-3">
            <h1 class="text-center title pt-0">FreeCodeCamp Project</h1>
        </div>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="FreeCodeCampProject.Id" />
            <input type="hidden" asp-for="FreeCodeCampProject.FccProjectThumb" />

            <div class="form-group">
                <label asp-for="FreeCodeCampProject.FccProjectName"></label>
                <input class="form-control" asp-for="FreeCodeCampProject.FccProjectName" />
            </div>

            <div class="form-group">
                <label asp-for="FreeCodeCampProject.FccProjectDescription"></label>
                <input class="form-control" asp-for="FreeCodeCampProject.FccProjectDescription" />
            </div>

            <div class="form-group">
                <label asp-for="ProjectThumb"></label>
                <div class="custom-file">
                    <input asp-for="ProjectThumb" class="custom-file-input" />
                    <label class="custom-file-label">Upload Project Thumbnail</label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FreeCodeCampProject.FccProjectLink"></label>
                <input class="form-control" asp-for="FreeCodeCampProject.FccProjectLink" />
            </div>

            <div class="form-group">
                <label asp-for="FreeCodeCampProject.FccCategory"></label>
                <select class="form-control" asp-for="FreeCodeCampProject.FccCategory" asp-items="Model.Categories"></select>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>

