@page
@model Portfolio.Pages.CMS.Skills.SkillListModel
@{
    ViewData["Title"] = "CMS - Skill List";
}

    <div class="container">
        <div class="title-container mt-3">
            <h1 class="title text-center pt-0">Skill List</h1>
        </div>
        <div class="d-flex justify-content-end">
            <a class="icon-color mb-2" asp-page="./EditSkill"><i class="far fa-plus-square fa-2x"></i></a>
        </div>
        <table class="table">
            <tr class="bg-th">
                <th>Skill Name</th>
                <th class="text-center">Edit</th>
            </tr>

            @foreach (var skill in Model.Skills)
            {
                <tr>
                    <td class="w90">@skill.SkillName</td>
                    <td class="w10 text-center"><a class="icon-color" asp-page="./EditSkill" asp-route-skillId="@skill.Id"><i class="far fa-edit fa-sm"></i></a></td>
                </tr>
            }

        </table>
    </div>

