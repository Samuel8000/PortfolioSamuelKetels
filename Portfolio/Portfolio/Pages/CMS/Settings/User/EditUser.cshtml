@page "{userId:int?}"
@model Portfolio.Pages.CMS.Settings.User.EditUserModel
@{
    ViewData["Title"] = "EditUser";
}

    <div class="container">
        <h1>EditUser</h1>

        <form method="post">
            <input type="hidden" asp-for="Account.Id" />
            <input type="hidden" asp-for="Account.Password"/>
            <div class="form-group">
                <label asp-for="Account.Name"></label>
                <input asp-for="Account.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Account.Password"></label>
                <input asp-for="PassWord" />
            </div>
            <button class="btn btn-dark" type="submit">Save</button>
        </form>
    </div>