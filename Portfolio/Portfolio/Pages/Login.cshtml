@page
@model Portfolio.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

    <div class="container">

        <div class="title-container mt-3">
            <h1 class="title text-center pt-0">Login</h1>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please enter your credentials</h3>
                    </div>
                    <div class="panel-body">

                        <form method="post">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="LoginTest.UserName"></label>
                                    <input class="form-control" placeholder="Username" asp-for="LoginTest.UserName" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LoginTest.Password"></label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="LoginTest.Password" autocomplete="off">
                                </div>
                                <div class="form-group login-remember">
                                    <label asp-for="LoginTest.RememberLogin">
                                        <input asp-for="LoginTest.RememberLogin">
                                        <strong>Remember Me</strong>
                                    </label>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Login</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>