@page
@model Portfolio.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container">
    <section class="d-flex justify-content-center align-items-center mt-5">
        <div class="form-container d-flex">
            <div class="contact-info d-flex justify-content-between flex-column">
                    <h2 class="title">Contact Details</h2>
                    <ul class="info">
                        <li class="d-flex">Please fill out the form and I'll get back to you as soon as possible. Or send me a message on the address below!</li>
                        <li>

                            <span><i class="far fa-envelope fa-2x"></i></span>
                            <span class="pt-1">ketels.samuel@gmail.com</span>
                        </li>
                    </ul>
                    <ul class="contact-icons">
                        <li><a href="#"><i class="fab fa-linkedin fa-2x"></i></a></li>
                        <li><a href="#"><i class="fab fa-codepen fa-2x"></i></a></li>
                        <li><a href="#"><i class="fab fa-stack-overflow fa-2x"></i></a></li>
                    </ul>
            </div>
            <form class="contact-form" method="post" id="formId">
                <input type="hidden" asp-for="TodaysDate" />
                <div class="form-box d-flex justify-content-between align-content-between">
                    <div class="input-field">
                        <input type="text" asp-for="Contact.ContactFirstName" required />
                        <span>First Name</span>
                    </div>

                    <div class="input-field">
                        <input type="text" asp-for="Contact.ContactLastName" required />
                        <span>Last Name</span>
                    </div>

                    <div class="input-field">
                        <input type="text" asp-for="Contact.ContactEmailAddress" required />
                        <span>Email Address</span>
                    </div>
                    <div class="input-field">
                        <input asp-for="Contact.ContactPhoneNumber" required />
                        <span>Phone Number</span>
                    </div>
                    <div class="input-field">
                        <textarea id="comment" asp-for="Contact.Remarks" required></textarea>
                        <span>Please leave a comment...</span>
                    </div>
                </div>
                <div class="form-box">
                    <div class="input-field">
                        <label asp-for="Contact.ContactType"></label>
                        <select asp-for="Contact.ContactType" asp-items="Model.ContactTypes"></select>
                    </div>
                    <div class="input-field">
                        <label asp-for="Contact.ContactOption"></label>
                        <select asp-for="Contact.ContactOption" asp-items="Model.ContactOptions"></select>
                    </div>

                </div>
                <div class="d-flex justify-content-center pt-3">
                    <input type="submit" class="btn btn-submit w-100" id="saveButton" data-toggle="modal" data-target="#saveModal" value="Send"/>
                </div>
            </form>
            </div>
