<div class="modal" tabindex="-1" role="dialog" id="saveModal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thanks for contacting me!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You will receive an e-mail with confirmation. I will get back to you as soon as possible. Talk to you soon!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.onload = function () {
            this.document.getElementById("formId").onsubmit = function () {
                var form = this;
                setTimeout(function () {
                    form.submit();
                }, 4000);
                return false;
            };
        };
    </script>
    <script>
        var commentArea = document.getElementById('comment');
        if (commentArea.value !== "") {
            commentArea.removeAttribute("required");
        }
    </script>
}
