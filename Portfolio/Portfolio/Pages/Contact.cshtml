@page
@model Portfolio.ContactModel
@{
    ViewData["Title"] = "Contact";
}

    <div class="container">
        <h1>Contact</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Contact.ContactFirstName"></label>
                <input asp-for="Contact.ContactFirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contact.ContactLastName"></label>
                <input asp-for="Contact.ContactLastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contact.ContactEmailAddress"></label>
                <input asp-for="Contact.ContactEmailAddress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contact.ContactType"></label>
                <select asp-for="Contact.ContactType" asp-items="Model.ContactTypes" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Contact.CompanyName"></label>
                <input asp-for="Contact.CompanyName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contact.ContactOption"></label>
                <select asp-for="Contact.ContactOption" asp-items="Model.ContactOptions" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Contact.Remarks"></label>
                <input asp-for="Contact.Remarks" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
